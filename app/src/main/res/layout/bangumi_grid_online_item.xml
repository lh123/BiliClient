<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	app:cardCornerRadius="2dp"
	android:clickable="true"
	android:layout_height="wrap_content"
	android:foreground="?android:attr/selectableItemBackground"
	android:layout_width="wrap_content">
	
	<RelativeLayout
		android:background="@color/white"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<com.lh.biliclient.widget.ScalableImageView
			android:id="@+id/cover"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:placeholderImage="@drawable/bili_default_image_tv_16_10"
			app:placeholderImageScaleType="centerCrop"
			app:aspectRadioWidth="16"
			app:aspectRadioHeight="10"/>

		<TextView
			android:textColor="?android:textColorPrimary"
			android:ellipsize="end"
			android:id="@+id/title"
			android:paddingLeft="8.0dp"
			android:paddingRight="8.0dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="4.0dp"
			android:layout_marginBottom="4.0dp"
			android:maxLines="2"
			android:layout_below="@id/cover"
			android:textAppearance="@style/TextSubtitle"/>

		<TextView
			android:textColor="@color/white"
			android:id="@+id/info_online"
			android:paddingLeft="8.0dp"
			android:paddingTop="2.0dp"
			android:paddingRight="8.0dp"
			android:paddingBottom="2.0dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="6.0dp"
			android:layout_marginBottom="6.0dp"
			android:singleLine="true"
			android:background="@drawable/daily_shape_trans_round_rect"
			android:drawableLeft="@drawable/ic_info_online2"
			android:drawablePadding="2.0dp"
			android:layout_alignRight="@id/cover"
			android:layout_alignBottom="@id/cover"
			android:textAppearance="@style/TextBody"/>
	</RelativeLayout>

</android.support.v7.widget.CardView>

